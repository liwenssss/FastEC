<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginBottom="2dp"
    android:paddingLeft="10dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded,RtlSymmetry">



    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/order_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_order_list_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:text="Time"
            android:textColor="@color/wechat_black"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,RtlSymmetry" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_order_list_position"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:lines="2"
            android:ellipsize="end"
            android:text="地址"
            tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,RtlSymmetry" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingRight="10dp"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:textSize="16sp"
                android:text="收货人："
                tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,RtlSymmetry" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_order_list_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:paddingRight="5dp"
                android:textSize="16sp"
                android:text="姓名"
                tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,RtlSymmetry" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:paddingLeft="5dp"
                android:textSize="16sp"
                android:text="手机号："
                tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,RtlSymmetry" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_order_list_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:textSize="16sp"
                android:text="手机号"
                tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,RtlSymmetry" />
        </android.support.v7.widget.LinearLayoutCompat>


        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="20dp"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/wechat_black"
                android:text="共 "
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_order_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                tools:ignore="HardcodedText,RtlHardcoded" />
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/wechat_black"
                android:text=" 件商品   实付款 "
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_order_list_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:textColor="@color/wechat_black"
                android:text=" 元"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </android.support.v7.widget.LinearLayoutCompat>


    </android.support.v7.widget.LinearLayoutCompat>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:gravity="right"
        >
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/order_receive_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="确认收货"
            android:textColor="@color/colorGreen"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>


</android.support.v7.widget.LinearLayoutCompat>