<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@android:color/white"
    >
    <LinearLayout
        android:id="@+id/rv_bar_mall"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/mall"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="超市"
            android:textSize="18sp"
            android:textColor="@color/dark_gray_text"
            android:gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/rv_bar_quanqiugou"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/quanqiugou"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="全球购"
            android:textSize="18sp"
            android:textColor="@color/dark_gray_text"
            android:gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/rv_bar_fushi"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/fushi"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="服饰"
            android:textSize="18sp"
            android:textColor="@color/dark_gray_text"
            android:gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/rv_bar_shengxian"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/shengxian"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="生鲜"
            android:textSize="18sp"
            android:textColor="@color/dark_gray_text"
            android:gravity="center"
            />

    </LinearLayout>


</LinearLayout>